@model QuestioningSystem.Models.ViewModel.Group.GroupViewModel

<script src="~/Scripts/jquery-2.1.1.js" type="text/javascript"></script>
@{
    ViewBag.Title = "ViewAllMembers";
}

<h2>ViewAllMembers</h2>

<br />
<br />
<div>
    <table class="table table-striped table-bordered table-condensed">
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Phone number</th>
        <th>Email</th>           
          @{
             int pom = 1;
             foreach(var item in @Model.Members)
                {
                 
                    <tr>
                        <td>@pom</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.UserName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@Html.ActionLink("Delete", "ViewAllMembers", "Group",  new { Id = @Model.ID , userId = item.Id },null)</td>
                    </tr>
                    pom++;
                }
        }
    </table>
        <br />
    <br />
  </div>