<div ng-controller="GroupController" onload="GetAllData()">
    <form novalidate name="f3" ng-submit="EditGroup()">
        <div ng-show="Success && Saved" class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>{{Message}}</div><br />
         <div ng-show="!Success && Saved" class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"></span></button>{{Message}}</div><br />
   
    <table style="border-collapse:collapse" ng-show="!IsLoggedIn" class="table table-striped table-bordered table-condensed">
        <th>#</th>
        <th>Title</th>
        <th>Creator</th>
        <th>Max Number of Members</th>
        
          @{
             int pom = 1;
             foreach(var item in @Model.Groups)
                {
                    <tr>
                        <td>@pom</td>
                        <td>@item.Title</td>
                        <td>@item.Creator</td>
                        <td>@item.MaxNumberOfMembers</td>
                        <td><a href="Edit/@item.ID">Edit</a></td>
                        <td><a href="Delete/@item.ID">Delete</a></td>
                        <td><a href="ViewAllMembers/@item.ID">View Members</a></td>
                    </tr>
                    pom++;
                }
        }
    </table>
    <br />
    <br />
  </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/AngularControllers/GroupController.js"></script>
}