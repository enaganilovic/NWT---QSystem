@model IEnumerable<QuestioningSystem.Models.ApplicationUser>

@{
    ViewBag.Title = "Explore Users";
}

<h2>Explore Users</h2>

<table class="table-bordered">
    <tr>
        <th style="color:white">
            @_("Username")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="color:white">
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink(@_("Profile").ToString(), "Profile", new { id=item.UserName })           
        </td>
    </tr>
}

</table>
