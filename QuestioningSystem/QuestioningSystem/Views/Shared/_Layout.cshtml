                    <li><a href="@Url.Action("SetLanguage", "Language", new { @name = "en-US" })"><img height="18" width="30" src="~/Content/united_kingdom_640.png"/></a></li>
  </ul>
  <br />
<br />
    </div> 
  </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @_("All rights reserved")</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
