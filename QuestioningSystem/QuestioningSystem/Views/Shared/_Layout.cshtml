            <li><a> @Html.ActionLink("Test-Points", "Exams", "Dashboards")</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@_("Users") <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a> @Html.ActionLink("Explore Users", "ExploreUsers", "Account")</a></li>
          </ul>
        </li>
        @if(User.IsInRole("Administrator"))
        {
            <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@_("Admin panel") <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a> @Html.ActionLink("Manage Users", "AdminPanel", "Home")</a></li>
          </ul>
